<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/church_1_button"
                    style="@style/CustomChurchImageHome"
                    android:src="@drawable/church_parrochia" />

                <TextView
                    android:id="@+id/church_1_title"
                    style="@style/CustomChurchTitleBox"
                    android:text="Chiesa di Sant&apos;Agata e Giorgio" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/church_2_button"
                    style="@style/CustomChurchImageHome"
                    android:src="@drawable/church_trinita" />

                <TextView
                    android:id="@+id/church_2_title"
                    style="@style/CustomChurchTitleBox"
                    android:text="Chiesa della Santissima TrinitÃ " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/church_3_button"
                    style="@style/CustomChurchImageHome"
                    android:src="@drawable/church_sangrato" />

                <TextView
                    android:id="@+id/church_3_title"
                    style="@style/CustomChurchTitleBox"
                    android:text="Chiesa di San Grato" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/church_4_button"
                    style="@style/CustomChurchImageHomeSmall"
                    android:src="@drawable/church_sanrocco" />

                <TextView
                    android:id="@+id/church_4_title"
                    style="@style/CustomChurchTitleBox"
                    android:text="Chiesa di San Rocco" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/church_5_button"
                    style="@style/CustomChurchImageHomeSmall"
                    android:src="@drawable/church_travata" />

                <TextView
                    android:id="@+id/church_5_title"
                    style="@style/CustomChurchTitleBox"
                    android:text="Chiesa della Travata" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/church_6_button"
                    style="@style/CustomChurchImageHomeSmall"
                    android:src="@drawable/church_sanrocco" />

                <TextView
                    android:id="@+id/church_6_title"
                    style="@style/CustomChurchTitleBox"
                    android:text="Chiesa di San Rocco" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/church_7_button"
                    style="@style/CustomChurchImageHomeSmall"
                    android:src="@drawable/church_santannajpg" />

                <TextView
                    android:id="@+id/church_7_title"
                    style="@style/CustomChurchTitleBox"
                    android:text="Chiesa di Sant&apos;Anna" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>